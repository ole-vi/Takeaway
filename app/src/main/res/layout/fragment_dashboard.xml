<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/offwhite"
    tools:context="org.ole.planet.takeout.Dashboard">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@null"
        android:gravity="center_vertical|center_horizontal|center"
        android:orientation="horizontal"
        android:weightSum="10">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="5dp"
            android:paddingTop="10dp"
            android:weightSum="10">

            <LinearLayout
                android:id="@+id/ll_user"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="left"
                android:layout_weight="2.7"
                android:background="@color/material_drawer_primary"
                android:orientation="vertical"
                android:padding="10dp"
                android:weightSum="5">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="2.5"
                    android:scaleType="fitCenter"
                    android:textAlignment="center"
                    app:srcCompat="@drawable/profile" />

                <TextView
                    android:id="@+id/txtFullName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="2dp"
                    android:layout_weight="0.9"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:text="Leonard Maximus Mensah"
                    android:textAlignment="center"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtCurDate"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.8"
                    android:text="22nd May 2018"
                    android:textAlignment="center"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="10 Visits"
                    android:textAlignment="center"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="7"
                android:orientation="vertical"></LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:clipToPadding="false"
            android:elevation="2dp"
            android:orientation="vertical"
            android:padding="5dp"
            android:weightSum="8">

            <LinearLayout
                android:id="@+id/ly1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:elevation="1dp"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:paddingTop="5dp"
                android:weightSum="6">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:background="@android:color/holo_red_light"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:weightSum="4">

                    <ImageButton
                        android:id="@+id/myLibraryImageButton"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="2.5"
                        android:background="@null"
                        android:padding="20dp"
                        android:scaleType="fitCenter"

                        app:srcCompat="@drawable/library" />

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="@string/txt_myLibrary"
                        android:textColor="@color/textColorPrimary"
                        android:textSize="18sp"
                        android:typeface="sans" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4.4"
                    android:background="@color/material_drawer_header_selection_text"
                    android:orientation="horizontal">

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <com.google.android.flexbox.FlexboxLayout
                            android:id="@+id/flexboxLayout"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            app:alignContent="stretch"
                            app:alignItems="stretch"
                            app:flexWrap="wrap" />
                    </HorizontalScrollView>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:weightSum="6">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:background="@color/md_amber_700"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/myCoursesImageButton"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="2.5"
                        android:background="@null"
                        android:padding="20dp"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/courses" />

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="@string/txt_myCourses"
                        android:textColor="@color/textColorPrimary"
                        android:textSize="18sp"
                        android:typeface="sans" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4.4"
                    android:background="@color/material_drawer_header_selection_text"
                    android:orientation="horizontal">

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <com.google.android.flexbox.FlexboxLayout
                            android:id="@+id/flexboxLayoutCourse"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            app:alignContent="stretch"
                            app:alignItems="stretch"
                            app:flexWrap="wrap"></com.google.android.flexbox.FlexboxLayout>
                    </HorizontalScrollView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="4.4"
                        android:background="@color/material_drawer_header_selection_text"
                        android:orientation="horizontal"></LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:weightSum="6">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:background="@android:color/holo_purple"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/myMeetUpsImageButton"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="2.5"
                        android:background="@null"
                        android:padding="20dp"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/meetups" />

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="@string/txt_myMeetups"
                        android:textColor="@color/textColorPrimary"
                        android:textSize="18sp"
                        android:typeface="sans" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4.4"
                    android:background="@color/material_drawer_header_selection_text"
                    android:orientation="horizontal">


                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:orientation="horizontal"
                android:paddingBottom="5dp"
                android:weightSum="6">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:background="@android:color/holo_green_dark"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/myTeamsImageButton"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="2.5"
                        android:background="@null"
                        android:padding="20dp"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/team" />

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="@string/txt_myTeams"
                        android:textColor="@color/textColorPrimary"
                        android:textSize="18sp"
                        android:typeface="sans" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4.4"
                    android:background="@color/material_drawer_header_selection_text"
                    android:orientation="horizontal">


                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <com.google.android.flexbox.FlexboxLayout
                            android:id="@+id/flexboxLayoutTeams"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            app:alignContent="stretch"
                            app:alignItems="stretch"
                            app:flexWrap="wrap" />
                    </HorizontalScrollView>

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</FrameLayout>
