<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_messages"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/md_white_1000"
    android:gravity="center"
    android:minWidth="@dimen/user_image_size"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/myLifeImage"
        android:layout_width="@dimen/icon_size_mid"
        android:layout_height="@dimen/icon_size_mid"
        android:layout_gravity="center"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:tint="@color/md_black_1000" />

    <TextView
        android:id="@+id/myLifeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:foregroundGravity="center"
        android:gravity="center"
        android:padding="@dimen/eight_dp"
        android:hint="@string/messeges"
        android:textColor="@color/md_black_1000" />

</LinearLayout>